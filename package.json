{
  "name": "robustmq-copilot",
  "version": "1.0.0",
  "private": true,
  "description": "The one-stop RobustMQ operation and maintenance management platform",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "oxlint": "^1.3.0",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "ui:dev": "pnpm -r --filter=web-ui run dev",
    "ui:build": "pnpm -r --filter=web-ui run build",
    "ui:build:experience": "cd packages/web-ui && pnpm run build:experience",
    "ui:preview": "pnpm -r --filter=web-ui run preview",
    "lint": "oxlint",
    "format": "prettier --write .",
    "prepare": "husky",
    "gen:grpc": "pnpm -r --filter=@robustmq/grpc-web-services run gen"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{ts,js,css,md}": [
      "prettier --write",
      "npm run lint"
    ]
  },
  "keywords": [
    "MQ",
    "RobustMQ"
  ],
  "author": "RobustMQ",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.6.5"
}